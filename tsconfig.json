{
  "compilerOptions": {
    /* ========================================
     * React 19 + Next.js 15 対応設定
     * ======================================== */

    /* 言語とモジュール */
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",

    /* 型チェック */
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "incremental": true,

    /* パス解決 */
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Next.js 15 プラグイン */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  /* インクルード・エクスクルード */
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
